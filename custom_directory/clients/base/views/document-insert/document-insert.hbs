<div class="main-pane span12">
    <div class="headerpane">
        <h1>
            <!--<span class="record-cell">{{str this.title}}</span>-->
            <span class="record-cell edit" data-type="name" data-name="name" style="width: 100%;">
                <span class="table-cell-wrapper" style="max-width: 520px;">
                    <span class="record-label" data-name="name">Document Title</span>
                    <span class="index" data-fieldname="name" data-index="">
                        <span class="edit">
                            <input id ="document-title" type="text" name="name" value="" maxlength="200" class="inherit-width" aria-label="Document Title" autofocus>
                        </span>
                    </span>
                </span>
            </span>
            <div class="btn-toolbar pull-right dropdown">
                {{#each meta.buttons}} {{field ../this model=../this.model template="detail"}} {{/each}}
            </div>
        </h1>
    </div>

<div class="record tab-layout">
    <div class="content-tabs">
        <ul class="nav nav-tabs" id="recordTab">
            <li class="tab panel_body active"><a href="#panel_bodyviewADM" data-toggle="tab">{{str this.title}}</a></li>
        </ul>
        <div id="tabContent" class="tab-content">
            <div class="tab-pane active" id="panel_bodyviewADM">
                <div class="row-fluid panel_body panel_body">
                    <div class="span6 record-cell edit" data-type="enum" data-name="document-type">                                    
                        <div class="record-label" data-name="document-type">Document Type</div>                
                        <select id="ddDocTypesAdd" class="select2" style="width:100%">
                        </select>
                    </div>
                    <div class="span6 record-cell edit" data-type="file" data-name="filename">
                        <div class="record-label" data-name="filename">Attachment</div>
                        <span class="normal index" data-fieldname="filename" data-index="">
                            <span sfuuid="952" class="edit">
                                <input id="document-attachment" type="file" name="filename" aria-label="Attachment">
                            </span>
                        </span>
                    </div>
                </div>
                <div id="customTags">
                </div>
            </div>
        </div>
    </div>
</div>